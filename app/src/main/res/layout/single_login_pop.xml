<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/game_rule_wrap_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="温馨提示"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/alpha_80_black"
            />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="token过期"
                    android:textColor="@color/alpha_80_black"
                    android:gravity="center"
                    android:id="@+id/top_text_tv"
                    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请重新登录"
            android:textColor="@color/alpha_80_black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:id="@+id/bottom_text_tv"
            />
        <include layout="@layout/split_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:textColor="#E76A5F"
            android:text="确定"
            android:textSize="16sp"
            android:id="@+id/single_login_pop_sure_tv"
            android:background="@drawable/countdown_sure_selector"
            />
    </LinearLayout>
</RelativeLayout>