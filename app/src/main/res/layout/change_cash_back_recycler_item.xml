<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/title_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text=" - -- "
        android:textSize="14sp"
        android:textColor="@color/default_color"
        app:layout_constraintStart_toEndOf="@+id/title_iv"
        app:layout_constraintTop_toTopOf="@+id/title_iv" />

    <TextView
        android:id="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- - -"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintBottom_toBottomOf="@+id/title_iv"
        app:layout_constraintStart_toStartOf="@+id/username_tv" />

    <Button
        android:id="@+id/extract_btn"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/commit_btn_selector"
        android:text="提取"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="- - - "
        android:textColor="@color/default_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/extract_btn"
        app:layout_constraintEnd_toStartOf="@+id/extract_btn"
        app:layout_constraintTop_toTopOf="@+id/extract_btn" />

    <TextView
        android:id="@+id/textView60"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F0F1F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>