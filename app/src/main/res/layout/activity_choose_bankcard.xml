<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.mine_fragment_activity.income_live_activity.ChooseBankcardActivity">
    <include android:id="@+id/include" layout="@layout/toolbar_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split"
        />
    <include layout="@layout/error_lyaout"/>
    <include layout="@layout/nodata_layout"/>
    <include layout="@layout/loading_layout"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_bankcard_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>