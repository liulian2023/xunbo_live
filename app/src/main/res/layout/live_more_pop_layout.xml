<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/swich_camare_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/qhsxt"
        app:layout_constraintEnd_toStartOf="@+id/swich_video_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/swich_video_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/gbsxt"
        app:layout_constraintBottom_toBottomOf="@+id/swich_camare_iv"
        app:layout_constraintStart_toEndOf="@+id/swich_camare_iv"
        app:layout_constraintTop_toTopOf="@+id/swich_camare_iv"
        app:layout_constraintEnd_toStartOf="@+id/swich_microphone_iv"
        />

    <ImageView
        android:id="@+id/swich_microphone_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/gbmkf"
        app:layout_constraintBottom_toBottomOf="@+id/swich_camare_iv"
        app:layout_constraintStart_toEndOf="@+id/swich_video_iv"
        app:layout_constraintTop_toTopOf="@+id/swich_camare_iv"
        app:layout_constraintEnd_toStartOf="@+id/swich_light_iv"
        />

    <ImageView
        android:id="@+id/swich_light_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/kqsgd"
        app:layout_constraintBottom_toBottomOf="@+id/swich_camare_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swich_microphone_iv"
        app:layout_constraintTop_toTopOf="@+id/swich_camare_iv" />

    <TextView
        android:id="@+id/swich_camare_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:scrollbarSize="12sp"
        android:text="切换摄像头"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/swich_camare_iv"
        app:layout_constraintStart_toStartOf="@+id/swich_camare_iv"
        app:layout_constraintTop_toBottomOf="@+id/swich_camare_iv" />

    <TextView
        android:id="@+id/swich_video_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭摄像头"
        android:scrollbarSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/swich_camare_tv"
        app:layout_constraintEnd_toEndOf="@+id/swich_video_iv"
        app:layout_constraintStart_toStartOf="@+id/swich_video_iv"
        app:layout_constraintTop_toTopOf="@+id/swich_camare_tv" />

    <TextView
        android:id="@+id/swich_microphone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭麦克风"
        android:scrollbarSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/swich_video_tv"
        app:layout_constraintEnd_toEndOf="@+id/swich_microphone_iv"
        app:layout_constraintStart_toStartOf="@+id/swich_microphone_iv"
        app:layout_constraintTop_toTopOf="@+id/swich_video_tv" />

    <TextView
        android:id="@+id/swich_light_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启闪光灯"
        android:scrollbarSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/swich_microphone_tv"
        app:layout_constraintEnd_toEndOf="@+id/swich_light_iv"
        app:layout_constraintStart_toStartOf="@+id/swich_light_iv"
        app:layout_constraintTop_toTopOf="@+id/swich_microphone_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>