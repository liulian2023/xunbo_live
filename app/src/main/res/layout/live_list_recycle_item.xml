<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/live_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/live_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/live_lottery_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/live_iv"
        app:layout_constraintRight_toRightOf="@+id/live_iv"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
       android:paddingBottom="3dp"
        android:textColor="@color/white"
       android:textSize="12sp"
        android:visibility="invisible"
        android:text="一分快三"/>

    <TextView
        android:id="@+id/live_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:maxWidth="166dp"
        android:singleLine="true"
        android:text="直播主标题"
        android:textColor="@color/default_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/live_iv" />

      <TextView
          android:id="@+id/live_title_two_tv"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="@+id/live_title_tv"
          app:layout_constraintRight_toRightOf="@+id/live_title_tv"
          app:layout_constraintTop_toBottomOf="@+id/live_title_tv"
          android:textSize="10sp"
          android:text="直播副标题"/>

    <ImageView
        android:id="@+id/is_live_iv"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/live_iv"
        app:layout_constraintStart_toStartOf="@+id/live_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>