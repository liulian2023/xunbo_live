        <TextView
            android:id="@+id/one_gift_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="- - - - - 映票"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/one_follow_tv"
            app:layout_constraintStart_toStartOf="@+id/one_follow_tv"
            app:layout_constraintTop_toBottomOf="@+id/one_follow_tv" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1"
            android:textSize="64sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/one_gift_amount_tv"
            app:layout_constraintStart_toStartOf="@+id/one_gift_amount_tv"
            app:layout_constraintTop_toBottomOf="@+id/one_gift_amount_tv" />


        <TextView
            android:id="@+id/three_follow_tv"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/top_follow_selector"
            android:gravity="center"
            android:text="关注"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/three_circle_bg_iv"
