            android:layout_marginTop="4dp"
            android:text="- - - - - 映票"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/three_follow_tv"
            app:layout_constraintStart_toStartOf="@+id/three_follow_tv"
