<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_narmal_8raidus_shape">

        <ImageView
            android:id="@+id/house_title_tv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="59dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dy_icon" />

        <TextView
            android:id="@+id/remark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="订阅"
            android:textSize="12sp"
            android:textColor="#999999"
            app:layout_constraintStart_toStartOf="@+id/house_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/house_title_tv" />

        <TextView
            android:id="@+id/house_keeper_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp"
            android:text="200.90"
            android:textColor="@color/default_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/remark_tv"
            app:layout_constraintTop_toBottomOf="@+id/remark_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>