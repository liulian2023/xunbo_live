<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/maim_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="bottom|center_vertical"
            android:gravity="center_vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:id="@+id/tab_home_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tab_home_img"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/home_click"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tab_home_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="首页"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_dynamic_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_dynamic_img"
                    android:layout_width="27dp"
                    android:layout_height="20dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/dynamic_unclick" />

                <TextView
                    android:id="@+id/tab_dynamic_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                     
                    android:gravity="center"
                    android:text="动态"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:src="@drawable/start_live"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_buy_img"
                    android:layout_width="20dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/rank_unclick"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tab_buy_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                     
                    android:gravity="center"
                    android:text="购彩"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_rank_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_rank_img"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/rank_unclick" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tab_rank_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                     

                    android:gravity="center"
                    android:text="排行"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_mine_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tab_mine_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="TODO"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/me_unclick" />

                    <TextView
                        android:id="@+id/tab_unread_tv"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="right|top"
                        android:layout_toRightOf="@+id/tab_mine_img"
                        android:background="@drawable/unread_message_shape"
                        android:visibility="invisible" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tab_mine_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="我的"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


    <ImageView
        android:id="@+id/start_live_iv"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/start_live"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        />
</FrameLayout>