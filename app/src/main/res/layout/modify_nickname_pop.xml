<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/game_rule_wrap_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="修改昵称"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            />
        <EditText
            android:id="@+id/set_business_card_etv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入中文昵称(1-10位)"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/default_color"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:lineSpacingExtra="4dp"
            />

        <include layout="@layout/split_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
            <TextView
                android:id="@+id/set_business_card_cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:textColor="@color/default_color"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/pop_cancel_selector"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/split"
                />
            <TextView
                android:id="@+id/set_business_card_sure_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="#63a4e8"
                android:gravity="center"
                android:background="@drawable/pop_sure_selector"
                />
        </LinearLayout>
        <!--</LinearLayout>-->
    </LinearLayout>
</LinearLayout>