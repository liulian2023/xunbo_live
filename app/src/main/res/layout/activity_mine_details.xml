<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FA"
    android:orientation="vertical"
    tools:context=".ui.activity.mine_fragment_activity.MineDetailsActivity">
    <include
        android:id="@+id/include"
        layout="@layout/toolbar_layout"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/details_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="#FD5281"
        app:tabTextColor="@color/default_color"
        app:tabIndicatorColor="#FD5281"
        android:background="@color/main_color"
        app:tabIndicatorFullWidth="false">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/details_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        />
</LinearLayout>